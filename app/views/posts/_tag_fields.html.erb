<div class="nested-fields well well-compact">
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= link_to_remove_association "remove task", f %>
  </div>

  <div class="descriptions">
    <%= f.fields_for :descriptions do |desc| %>
      <%= render 'description_fields', f: desc %>
    <%end%>
    <div class="links">
      <%= link_to_add_association "add description", f, :descriptions %>
    </div>
  </div>
</div>