<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %><br>

    <% @post.tags.each_with_index do |tag,i| %>

      <strong>Post<% i += 1 %><%= i %>:</strong>
	  <%= tag.name %><br>

	    <% tag.descriptions.each_with_index do |desc,i| %>

	      <strong>Descriptions<% i += 1 %><%= i %>:</strong>
		    <%= desc.body %><br>
	    <% end %>
	<% end %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
